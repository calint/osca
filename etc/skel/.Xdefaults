! backspace to ^? instead of ^H
XTerm.vt100.backarrowKey: false
XTerm.vt100.ttyModes: erase ^?
! colors
XTerm.vt100.background: black
XTerm.vt100.foreground: grey
! font
XTerm.vt100.faceName: JetBrains Mono Nerd Font
XTerm.vt100.faceSize: 16
XTerm.vt100.scaleHeight: 1.2
! donâ€™t scroll when new output arrives if user scrolled up
XTerm.vt100.scrollTtyOutput: false
XTerm.vt100.autoScrollLock: true
! jump to bottom of buffer if user makes input
XTerm.vt100.scrollKey: true
! history buffer
XTerm.vt100.saveLines: 10000
! keybindings
XTerm.vt100.translations: #override \n\
    Ctrl <Key> -: smaller-vt-font() \n\
    Ctrl <Key> +: larger-vt-font() \n\
    Ctrl <Key> 0: set-vt-font(d) \n\
    Ctrl Shift <Key>C: copy-selections(CLIPBOARD) \n\
    Ctrl Shift <Key>V: insert-selection(CLIPBOARD) \n\
    <Btn1Up>: select-end(PRIMARY, CLIPBOARD, CUT_BUFFER0) \n\
    <Btn2Up>: insert-selection(CLIPBOARD)
