# backspace to ^? instead of ^H
XTerm.vt100.backarrowKey: false
XTerm.vt100.ttyModes: erase ^?
# colors
XTerm.vt100.background: black
XTerm.vt100.foreground: grey
# font
XTerm.vt100.faceName: JetBrains Mono Nerd Font
XTerm.vt100.faceSize: 15
XTerm.vt100.scaleHeight: 1.3
# keybindings
XTerm.vt100.translations: #override \n\
    Ctrl <Key> minus: smaller-vt-font() \n\
    Ctrl <Key> plus: larger-vt-font() \n\
    Ctrl Shift <Key>C: copy-selections(CLIPBOARD) \n\
    Ctrl Shift <Key>V: insert-selection(CLIPBOARD) \n\
    <Btn1Up>: select-end(CLIPBOARD) \n\
    <Btn2Up>: insert-selection(CLIPBOARD)

